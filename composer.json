{
  "name": "iwazaru/biblys",
  "description": "La solution web tout en un au service de l'édition et de la librairie indépendante",
  "license": "proprietary",
  "scripts": {
    "test": [
      "PHP_ENV=test composer db:reset",
      "PHP_ENV=test composer db:migrate",
      "PHP_ENV=test vendor/bin/phpunit --stop-on-error --stop-on-failure tests/"
    ],
    "test:path": "PHP_ENV=test vendor/bin/phpunit --stop-on-error --stop-on-failure",
    "test:js": "yarn test",
    "build": "yarn encore dev",
    "build:watch": "yarn encore dev --watch",
    "build:prod": "NODE_ENV=production yarn encore production",
    "theme:download": "git -C app pull",
    "theme:refresh": "cp -r app/public/* public/",
    "theme:update": [
      "@theme:download",
      "@theme:refresh"
    ],
    "theme:watch": "echo \"app/public/theme/styles.css\" | entr composer theme:refresh",
    "propel": "vendor/bin/propel",
    "propel:build": "vendor/bin/propel model:build --output-dir src --loader-script-dir src/Biblys/Database",
    "propel:diff": "vendor/bin/propel diff",
    "propel:migrate": "vendor/bin/propel migrate",
    "db:reset": "bin/database-reset",
    "db:migrate": "vendor/bin/propel migrate",
    "db:seed": "bin/console db:seed",
    "db:prepare": ["@db:reset", "@db:migrate", "@db:seed"],
    "images:import": "bin/console images:import",
    "images:export": "bin/console images:export",
    "images:optimize": "bin/console images:optimize",
    "images:migrate": "bin/console images:migrate",
    "media:import": "bin/console media:import",
    "files:migrate": "bin/console files:migrate",
    "images:clean": "bin/console images:clean",
    "users:create-admin": "bin/console users:create-admin",
    "license:add": ["@license:add:php", "@license:add:js", "@license:add:css", "@license:add:twig"],
    "license:add:php": "docker run -it -v ${PWD}:/src ghcr.io/b1nary-gr0up/nwa:main add --copyright \"Clément Latzarus\" --license agpl-3.0-only --skip \"vendor/**\" --skip \"src/Model/Base/*.php\" --skip \"src/Model/Map/*.php\" --skip \"src/Biblys/Database/loadDatabase.php\" \"**/*.php\"",
    "license:add:js": "docker run -it -v ${PWD}:/src ghcr.io/b1nary-gr0up/nwa:main add --copyright \"Clément Latzarus\" --license agpl-3.0-only \"assets/**/*.js\" \"public/assets/js/*.js\" \"public/common/js/*.js\"",
    "license:add:css": "docker run -it -v ${PWD}:/src ghcr.io/b1nary-gr0up/nwa:main add --copyright \"Clément Latzarus\" --license agpl-3.0-only \"assets/**/*.css\" \"public/assets/css/*.css\" \"public/common/css/*.css\"",
    "license:add:twig": "docker run -it -v ${PWD}:/src ghcr.io/b1nary-gr0up/nwa:main add --copyright \"Clément Latzarus\" --license agpl-3.0-only \"**/*.twig\""
  },
  "require": {
    "php": "~8.1",
    "ext-json": "*",
    "ext-pdo": "*",
    "biblys/eurotax": "1.*",
    "symfony/http-foundation": "^6.0",
    "twig/twig": "^3.0",
    "symfony/routing": "^6.0.0",
    "symfony/var-dumper": "~6.0",
    "symfony/http-kernel": "^6.0",
    "symfony/yaml": "^6.0",
    "symfony/config": "^6.0",
    "monolog/monolog": "^3.0",
    "google/recaptcha": "^1.1",
    "guzzlehttp/guzzle": "~7.4",
    "biblys/isbn": "~3.0",
    "symfony/form": "^6.0",
    "symfony/security-csrf": "^6.0",
    "payplug/payplug-php": "^3.1",
    "gitonomy/gitlib": "^1.2",
    "symfony/debug": "^4.4",
    "symfony/event-dispatcher": "^6.0",
    "symfony/console": "^6.0",
    "symfony/intl": "^6.0",
    "symfony/twig-bridge": "^6.0",
    "symfony/options-resolver": "^6.0",
    "symfony/webpack-encore-bundle": "^2.0",
    "stripe/stripe-php": "^17.0",
    "egulias/email-validator": "^4.0",
    "symfony/mime": "^6.0",
    "rollbar/rollbar": "~4.0",
    "propel/propel": "~2.0.0-beta4",
    "ircmaxell/random-lib": "^1.2",
    "symfony/filesystem": "^6.0",
    "league/csv": "^9.7",
    "ext-dom": "*",
    "ext-libxml": "*",
    "ext-mbstring": "*",
    "symfony/mailer": "^6.0",
    "firebase/php-jwt": "^6.3",
    "mailjet/mailjet-apiv3-php": "^1.5",
    "symfony/string": "^6.2",
    "facile-it/php-openid-client": "^0.3.3",
    "symfony/psr-http-message-bridge": "^6.0",
    "euskadi31/opengraph": "^2.0",
    "symfony/rate-limiter": "^6.3",
    "league/html-to-markdown": "^5.1",
    "getbrevo/brevo-php": "2.0.10",
    "lemonink/lemonink-php": "^1.1",
    "ext-simplexml": "*",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "spatie/image": "^2.2",
    "sentry/sentry": "^4.9",
    "dansmaculotte/mondialrelay-php": "^1.4",
    "spomky-labs/aes-key-wrap": "^7.0",
    "matthiasmullie/scrapbook": "^1.5",
    "psr/simple-cache": "^3.0",
    "laminas/laminas-feed": "^2.23",
    "paypal/paypal-server-sdk": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~12",
    "roave/security-advisories": "dev-master",
    "mockery/mockery": "^1.6"
  },
  "autoload": {
    "psr-0": {
      "": "src"
    }
  },
  "config": {
    "process-timeout": 0,
    "allow-plugins": {
      "kylekatarnls/update-helper": true,
      "php-http/discovery": true
    }
  }
}
