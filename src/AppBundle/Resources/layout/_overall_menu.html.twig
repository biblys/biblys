<div class="OverallMenu overall-menu position-sticky sticky-top d-print-none">
  {% if app.currentUser.isAuthenticated and app.currentUser.isAdmin %}
    <div class="OverallMenu__admin-section">
      <a class="OverallMenu__entry" href="{{ path("main_admin") }}">
        <span class="fa fa-cogs"></span>
        <span class="OverallMenu__entry__label">Administration</span>
      </a>
    </div>
  {% else %}
    <div></div>
  {% endif %}

  <div class="OverallMenu__user-section">
    <a href="/articles/search?autofocus=1" class="OverallMenu__entry OverallMenu__entry--search">
      <i class="OverallMenu__entry__icon fa-solid fa-magnifying-glass"></i>
      <span class="OverallMenu__entry__label">Recherche</span>
    </a>

    <a href="/pages/cart" class="OverallMenu__entry OverallMenu__entry--cart">
      <i class="OverallMenu__entry__icon fa-solid fa-basket-shopping"></i>
      <span class="OverallMenu__entry__label">Mon panier</span>
    </a>

    {% if not app.currentUser.isAuthenticated %}
      <a class="OverallMenu__entry" rel="nofollow" href="{{ path("user_login", { return_url: app.currentUrl.relativeUrl }) }}">
        <i class="OverallMenu__entry__icon fa-regular fa-circle-user"></i>
        Connexion
      </a>
    {% else %}
      <a class="OverallMenu__entry" href="{{ path("user_account") }}">
        <i class="OverallMenu__entry__icon fa-solid fa-circle-user"></i>
        Mon compte
      </a>
    {% endif %}
  </div>
</div>
