{% extends "layout:base.html.twig" %}

{% block title %}
  Ventes par article
{% endblock %}

{% block main %}
  <h1>
    <i class="fa-solid fa-book"></i>
    Ventes par article
  </h1>

  <table class="table table-striped mt-4">
    <thead>
      <tr>
        <th>Titre</th>
        <th class="text-center">Quantité</th>
        <th class="text-center">Total</th>
      </tr>
    </thead>
    <tbody>
    {% for item in sales %}
      <tr>
        <td>
          <a href="{{ path('article_show', { slug: item.article.url }) }}">
            {{ item.article.title }}
          </a>
        </td>
        <td class="text-right">{{ item.quantity }}</td>
        <td class="text-right">{{ item.total|currency('EUR')|raw }}</td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4">Aucun article vendu.</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
{% endblock %}