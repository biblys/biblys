{% if post.model|hasImage() %}
  <div class="post-illustration">
    <img src="{{ post.model|imageUrl }}" class="post-illustration-image" {% if post.has('illustration_legend') %} alt="{{ post.illustration_legend }}" {% endif %}>
  </div>
{% endif %}

{% if post.has('content') %}
  <div class="post-content">
    {% if post.model.excerpt and use_excerpt is defined %}
      {{ post.model.excerpt|raw }}
      <p class="text-right">
        <a href="{{ path('post_show', { slug: post.model.slug }) }}" class="btn btn-light">
          Lire la suite
        </a>
      </p>
    {% else %}
      {{ post.content|raw }}
    {% endif %}
  </div>
{% endif %}

{% if post.articles %}
  <div class="linked-articles">
    {% for article in post.articles %}
      <a href="/{{ article.url }}">
        <img src="{{ article.coverUrl }}" alt="{{ article.title }}" class="linked-article">
      </a>
    {% endfor %}
  </div>
{% endif %}
