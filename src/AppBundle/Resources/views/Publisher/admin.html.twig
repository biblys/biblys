{% extends "layout:admin.html.twig" %}

{% block title %}
  Collections
{% endblock %}

{% block main %}
  <h1>
    <span class="fa fa-th-list"></span>
    Éditeurs ({{ count }})
  </h1>

  <table class="table mt-4">
    <thead>
    <tr>
      <th>Nom</th>
      <th>Articles</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {% for publisher in publishers %}
      <tr>
        <td>
          <a href="{{ path("publisher_show", { slug: publisher.url }) }}">
            {{ publisher.name }}
          </a>
        </td>
        <td>
          {{ publisher.articles|length }}
        </td>
        <td>
          <a class="btn btn-primary" href="{{ path("publisher_edit", { id: publisher.id }) }}" title="Modifier">
            <span class="fa fa-pencil"></span>
          </a>
          <a class="btn btn-danger" href="{{ path("publisher_delete", { id: publisher.id }) }}" title="Supprimer">
            <span class="fa fa-trash-can"></span>
          </a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  {% include "AppBundle:Utils:_pagination.html.twig" %}
{% endblock %}