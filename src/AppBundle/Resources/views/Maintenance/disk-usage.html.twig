{% extends "layout:base.html.twig" %}

{% block title %}
  Espace disque
{% endblock %}

{% block main %}
  <h1><span class="fa fa-database"></span> Espace disque</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Type</th>
        <th>Fichiers</th>
        <th>Taille</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Articles (images de couverture)</td>
        <td>{{ articlesCount }}</td>
        <td>{{ articlesSize }} Go</td>
      </tr>
      <tr>
        <td>Exemplaires d'occasion (photos)</td>
        <td>{{ stockItemsCount }}</td>
        <td>{{ stockItemsSize }} Go</td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <th>Total :</th>
        <th>{{ totalCount }}</th>
        <th>{{ totalSize }} Go</th>
      </tr>
    </tfoot>
  </table>
{% endblock %}
