{% for post in posts %}

    <article class="post">
        <header class="header">
            <h2 class="title"><a href="/blog/{{ post.url }}">{{ post.title }}</a></h2>
            <p>Publi√© le {{ post.date|date("d/m/Y") }} 
                {% if post.has('category') %} dans {{ post.category.name }} {% endif %}
            </p>
        </header>
        {% if post.content %}
            <section class="content">
                {{ post.content|raw }}
            </section>
        {% endif %}
    </article>

{% endfor %}