{% extends "layout:base.html.twig" %}

{% block title %}
  Désinscription de la newsletter
{% endblock %}

{% block main %}
  <h2>Désinscription de la newsletter</h2>

  <p>Pour vous désabonner, entrez simplement ci-dessous votre adresse e-mail.</p>
  <form method="post" action="{{ path('mailing_unsubscribe') }}">
    <fieldset>
      <input class="long" type="email" placeholder="Votre adresse e-mail" name="email" id="email" value="{{ email }}" required>
      <button class="btn btn-primary btn-sm">Se désabonner</button>
      </fieldset>
  </form>
{% endblock %}
