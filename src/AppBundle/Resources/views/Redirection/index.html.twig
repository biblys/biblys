{% extends "layout:base.html.twig" %}

{% block title %}
  Redirections
{% endblock %}

{% block main %}

  <h1><span class="fa fa-compass"></span> Redirections</h1>

  <form class="form-inline" action="{{ path("redirection_create") }}" method="post">
    <div class="form-group">
      <label for="old_url">Ancienne URL :</label>
      <input type="text" class="form-control" id="old_url" name="old_url">
    </div>
    <div class="form-group">
      <label for="new_url">Nouvelle URL :</label>
      <input type="text" class="form-control" id="new_url" name="new_url">
    </div>
    <button type="submit" class="btn btn-default">Ajouter</button>
  </form>

  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Ancienne URL</th>
      <th>Nouvelle URL</th>
    </tr>
    </thead>
    {% for redirection in redirections %}
      <tr>
        <td><a href="{{ redirection.oldUrl }}">{{ redirection.oldUrl }}</a></td>
        <td><a href="{{ redirection.newUrl }}">{{ redirection.newUrl }}</a></td>
        <td>
      </tr>
    {% endfor %}
  </table>

{% endblock %}
