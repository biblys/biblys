{% extends "layout:admin.html.twig" %}

{% block title %}
  Ajouter un exemplaire
{% endblock %}

{% block main %}

  <a href="/pages/adm_stocks">
    <i class="fa-solid fa-cubes"></i>
    Stock
  </a>

  <h1>Ajouter un nouvel exemplaire</h1>

  {% include "AppBundle:Utils:_entity-search-field.html.twig" with {
    query_url: "/pages/adm_article_search",
    label: "Rechercher un article par titre, auteur, mot-clé, ISBN...",
    autofocus: true,
    required: true,
  } %}

  <script type="module">
    import EntitySearchField from '/common/js/entity-search-field.js';

    document.addEventListener('DOMContentLoaded', function() {
      const field = document.getElementById('entity-search-field');
      new EntitySearchField(field, {
        onResultSelected: (result) => {
          window.location.href = `/pages/adm_stock?add=${result.value}`;
        },
        action: {
          label: 'Créer un article pour « %query% »',
          onSelect: (query) => {
            window.location.href = `/pages/article_edit?import=${query}`;
          }
        },
      });
    });
  </script>

{% endblock %}