{% extends "layout:admin.html.twig" %}

{% block title %}
  Offres spéciales
{% endblock %}

{% block main %}
  <h1>
    <span class="fa-solid fa-certificate"></span>
    Offres spéciales
  </h1>

  <table class="table mt-4">
    <thead>
    <tr>
      <th>Offre</th>
      <th>Début</th>
      <th>Fin</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    {% for offer in offers %}
      <tr>
        <td>
          <a href="{{ path('special_offer_edit', { id: offer.id }) }}">
            {{ offer.name }}
          </a>
        </td>
        <td>{{ offer.startDate|date('d/m/Y') }}</td>
        <td>{{ offer.endDate|date('d/m/Y') }}</td>
      </tr>
    {% else %}
      <tr>
        <td colspan="4">
          Aucune offre spéciale
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

{% endblock %}